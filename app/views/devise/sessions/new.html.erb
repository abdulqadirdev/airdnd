<% content_for :devise_form do %>
<h2 class="font-bold text-5xl center font-mono mb-5 text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'text-gray-700' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: ' mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-black'  %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'text-gray-700'  %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: ' mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-black'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me , class: 'border-gray-300 border-2
                          text-black
                          focus:border-gray-300 focus:ring-black' %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class: 'py-1.5 px-6 my-3 block w-full bg-black text-white' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<% end %>
<%= render  "form-area" %>