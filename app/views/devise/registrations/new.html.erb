<% content_for :devise_form do %>


<h2 class="font-bold text-3xl center font-mono mb-5 text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, class: 'text-gray-700' %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: ' mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-black' %>
  </div>
  <div class="field">
    <%= f.label :email, class: 'text-gray-700' %><br />
    <%= f.email_field :email, autocomplete: "email", class: ' mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-black' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: ' mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-black'  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ' mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-black'  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: 'py-1.5 px-6 my-3 block w-full bg-black text-white', data: {turbo: false} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<% end %>

<%= render 'form-area' %>