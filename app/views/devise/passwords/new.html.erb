<% content_for :devise_form do %>
<h2 class="font-bold text-5xl center font-mono mb-5 text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'text-gray-700' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ' mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200 focus:ring-0 focus:border-black' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" ,class: 'py-1.5 px-6 my-3 block w-full bg-black text-white' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<% end %>
<%= render  "form-area" %>
