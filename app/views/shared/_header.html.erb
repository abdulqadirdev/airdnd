<header class="py-8 bg-black text-white">
    <div class="container mx-auto px-4">
        <div class="flex w-full items-center">
            <div class="flex-none">
                <a href="#" class="text-2xl">Airdnd</a>
            </div>
            <div class="grow w-full">
                <nav>
                  <ul class="flex items-center justify-center">
                    <li class="mx-5">
                      <a href="#">Places to Stay</a>
                    </li>
                    <li class="mx-5">
                      <a href="#">Experience</a>
                    </li>
                    <li class="mx-5">
                      <a href="#">Online Experience</a>
                    </li>
                  </ul>
                </nav>
            </div>
            <div class="flex-none w-24 bg-white text-black p-2 rounded-full">
                <div>
                <div class="flex relative justify-between">
                  <a href="#" class=""> <%= current_user.username if user_signed_in?%> </a>
