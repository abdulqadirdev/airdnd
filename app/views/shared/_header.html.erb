                     <li class="border-b border-gray-200 py-1"><a href="#">edit profile</a></li>
                     <li class="border-b border-gray-200 py-1"><%= button_to  "log Out", destroy_user_session_path	, method: :delete, data: {turbo: false} %> </li>

                       <% elsif %>
                     <li class="border-b border-gray-200 py-1"><%= link_to "Log in", new_session_path(resource_name) %></li>
                      <li class="border-b border-gray-200 py-1"><%= link_to "Sign Up", new_user_registration_path %></li>
                       <% end %>
                        </ul>
                </div>
                </div>
            </div>
        </div>
